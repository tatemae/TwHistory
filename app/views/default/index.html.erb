<div class="feature"> 
	<div class="feature-holder">
	  <%= render 'projects/options_list' %>
		<h2 class="text-feature">featured re-enactment</h2>
		<div class="row">
		  <h3 class="text-sinking"><%= link_to @project.title, @project %></h3>
			<div class="img-holder"> 
				<%= link_to image_tag(@project.photo.url(:medium)), @project %>
			</div>
			<ul class="cite-list">
			  <%= render :partial => 'projects/item', :collection => @items %> 
			</ul>
		</div>
	</div>
</div>
<p><%= @project.description %></p>