<div class="item">
  <div class="visual">
    <%= image_tag item.photo.url(:icon) if item.photo_file_name %>
  </div>
  <div class="text-holder"> 
    <p><strong class="name"><%= item.character.name %></strong> <%= item.content %></p> 
		<em class="date"> <%= item.event_date_time %></em>
  	<div><%= link_to 'Edit', edit_project_item_path(@project, item) %> | <%= link_to 'Destroy', project_item_path(@project, item), :confirm => 'Are you sure?', :method => :delete %> </div>
  </div>
</div>