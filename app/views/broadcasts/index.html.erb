<h2>Broadcast Schedule</h2> 
<h4>Re-enactments in Progress</h4>
<% if @broadcasts_in_progress.any? -%>
  <ul class="progress-list">
    <%= render :partial => 'broadcasts/broadcast', :collection => @broadcasts_in_progress %>
  </ul>
<% else -%>
  No current broadcasts
<% end -%>
<h4>Scheduled Re-enactments</h4> 
<div id="calendar"></div>

<script type="text/javascript" language="JavaScript">
  jQuery(document).ready(function(){
  	var date = new Date();
  	var d = date.getDate();
  	var m = date.getMonth();
  	var y = date.getFullYear();
	
  	jQuery('#calendar').fullCalendar({
  		header: {
  			left: 'prev',
  			center: 'title',
  			right: 'next'
  		},
  		buttonText: {
          	prev: '&nbsp;',
          	next: '&nbsp;'
  	    },
  		editable: false,
  		events: [
  			{
  				title: 'Gettysburg',
  				start: new Date(y, m-1, 28),
  				end: new Date(y, m, 2)
  			},
  			{
  				title: '1947 Mormon Pioneer Trek',
  				start: new Date(y, m, 5),
  				end: new Date(y, m, 30)
  			},
  			{
  				title: 'Cuban Misile Crisis',
  				start: new Date(y, m, 6),
  				end: new Date(y, m, 13)
  			},
  			{
  				title: 'Titanik',
  				start: new Date(y, m, 11),
  				end: new Date(y, m, 12)
  			},
  		]
  	});	
  });
</script>