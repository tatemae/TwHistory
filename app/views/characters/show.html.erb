<p class="spaced-10">
  <%= link_to translate('projects.return_to_project', :project_title => @project.title), @project %> 
</p>
<h1><%= @character.name %><span><%= link_to translate('general.edit'), edit_project_character_path(@project, @character) %></span></h1>
<%= render 'characters/link_twitter' %>

<div id="character-bio">
  <%= image_tag @character.photo.url(:medium) if @character.photo_file_name %>
  <%= @character.bio %>
</div>

<h3 class="ico-comments">
  Historical Timeline
  <span><%= link_to translate('general.inline_add'), new_project_item_path(@project, :character => @character.id) if @project.can_edit?(current_user) %></span>
</h3> 
<div id="list">
  <%= render :partial => 'items/item', :collection => @items %> 
</div>
<%= will_paginate @items %>