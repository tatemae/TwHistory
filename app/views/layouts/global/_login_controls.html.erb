<% if logged_in? -%>
  <div class="login-form">
    <p>Welcome <%= current_user.display_name %></p>
    <p><%= link_to 'Logout', logout_path %> | <%= link_to 'Dashboard', user_path(current_user) %></p>
  </div>
<% else -%>
  <div class="login-form">
    <%= form_for :user_session, :url => user_session_path do |f| -%>
      <fieldset>
        <input type="submit" class="submit" />					
        <div class="row">								
          <label for="lbl01" class="text-username"><%= I18n.t('muck.users.username') %></label>							
          <%= f.text_field :login, :id => "lbl01", :class =>"text" %>
        </div>
        <div class="row">								
          <label for="lbl02" class="text-password"><%= I18n.t('muck.users.password') %></label>
          <%= f.password_field :password, :id => "lbl02", :class =>"text" %>
        </div>
      </fieldset>
    <% end -%>
  </div>         
<% end -%>